<idea-plugin>
    <actions>
        <group id="TiadPlugin.NewBuildingBlock.Group" text="DDD BuildingBlock"
               icon="/icon/buildingblocks/buildingblocks.png"
               description="NewBuildingBlock" popup="true">
            <add-to-group group-id="NewGroup1" anchor="last"/>
            <action id="TiadPlugin.NewBuildingBlock.CreateEntityAction"
                    class="com.clsaa.tiad.idea.action.buildingblocks.CreateEntityAction"
                    text="Entity"/>
            <action id="TiadPlugin.NewBuildingBlock.CreateAggregateAction"
                    class="com.clsaa.tiad.idea.action.buildingblocks.CreateAggregateAction"
                    text="CreateAggregateAction"/>
        </group>

    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <internalFileTemplate name="TiadEntity"/>
        <internalFileTemplate name="TiadAggregate"/>
    </extensions>
</idea-plugin>