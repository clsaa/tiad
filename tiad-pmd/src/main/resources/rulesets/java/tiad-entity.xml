<?xml version="1.0"?>

<ruleset name="TiadEntityRuleSet" xmlns="http://pmd.sourceforge.net/ruleset/2.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/2.0.0 http://pmd.sourceforge.net/ruleset_2_0_0.xsd">
    <description>TiadEntity</description>

    <rule name="EntityMustHaveOneIdentifierRule" message="java.entity.EntityMustHaveOneIdentifierRule.rule.msg"
          class="com.clsaa.tiad.pmd.lang.java.rule.entity.EntityMustHaveOneIdentifierRule">
        <description>java.entity.EntityMustHaveOneIdentifierRule.rule.desc</description>
        <priority>1</priority>
        <example>java.entity.EntityMustHaveOneIdentifierRule.rule.reference1</example>
    </rule>

    <rule name="AvoidDoubleOrFloatEqualCompareRule" message="java.entity.AvoidDoubleOrFloatEqualCompareRule.rule.msg"
          class="com.clsaa.tiad.pmd.lang.java.rule.entity.AvoidDoubleOrFloatEqualCompareRule">
        <description>java.entity.AvoidDoubleOrFloatEqualCompareRule.rule.desc</description>
        <priority>1</priority>
        <example>
            <![CDATA[
Negative example:
        float g = 0.7f-0.6f;
        float h = 0.8f-0.7f;
        if (g == h) {
            System.out.println("true");
        }
 ]]>
        </example>
        <example>
            <![CDATA[
Positive example:
        double dis = 1e-6;
        double d1 = 0.0000001d;
        double d2 = 0d;
        System.out.println(Math.abs(d1 - d2) < dis);
]]>
        </example>
    </rule>
</ruleset>
